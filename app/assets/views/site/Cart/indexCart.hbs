{{!< ../layout}}
<div id="main">
    <div class="container">
        <div class="breadcrumbs">
            <a href="/" class="home"><svg> <use xlink:href="/images/site/svg/sprite.svg#icon_home"></use> </svg></a>
            <span>Корзина</span>
        </div>
        <section class="catalog">
            <header>
                <h1>Корзина</h1>
            </header>
            <div class="catalog__content basket_view layout">

                <div class="catalog__main">
                    <style>
                        .table_preview tr {
                            background: #fff;
                        }
                        .table_preview td {
                            padding: 5px
                        }
                        .table_preview td:first-child {
                            max-width: 450px;
                        }
                        .table_preview .item__description {
                            padding: 0;
                        }
                    </style>
                    <table class="table_preview product-cont-big"></table>

                    <div class="checkout__total" id="cart-panel-ordering">
                        <div class="checkout__total_field">
                            <p class="total result-calc"></p>
                            <a class="get_order" href="/ordering">Оформить заказ</a>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <section class="catalog preview">
            <header>
                <h3>С этим товаром покупают</h3>
            </header>
            {{> site/block/theirsProductBuy }}
        </section>
    </div>
</div>

{{#contentFor "footer"}}
    <!-- filters-categories -->
    <script src="/js/site/filters-categories.js"></script>
    <script>
        $(document).ready(function(){
            filCat.initialize({
                cont      : '.selResult',
                isLoadCat : false,
                num       : '.selReN > .i',
                pagination: true,
                url_req   : '/',
            });

            setTimeout(filCat.selectCatalogs(), 0);
        });
    </script>
    <script type="text/javascript" src="/js/site/gallery.js"></script>
{{/contentFor}}
