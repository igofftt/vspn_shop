{{!< layout}}
<div class="container">
    <form class="form-login" role="form" method="post">
        <h2 class="form-signin-heading">Admin panel</h2>
        <p class="form-signin-heading">Авторизация</p>

        <div class="form-group">
            <label for="inputEmail" class="sr-only">Email</label>
            <input type="text" name="email" id="inputEmail" class="form-control" placeholder="Email" required autofocus>
        </div>
        <div class="form-group">
            <label for="inputPassword" class="sr-only">Пароль</label>
            <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Пароль" required>
        </div>

        {{#if error.length}}
            <div class="alert alert-danger" role="alert">{{ error }}</div>
        {{/if}}

        <button type="submit" class="btn btn-primary block full-width m-b">Войти</button>
    </form>
</div>