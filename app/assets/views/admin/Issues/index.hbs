{{!< ../layout}}
{{#contentFor "head"}}
    <link href="/css/admin/plugins/issues-block.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="/css/admin/plugins/jqueru-ui/jquery-ui.min.css">
    <link rel="stylesheet" href="/css/admin/plugins/jqueru-ui/jquery-ui.structure.min.css">
    <link rel="stylesheet" href="/css/admin/plugins/jqueru-ui/jquery-ui.theme.min.css">
{{/contentFor}}

<div class="top-slide-menu" data-hidden>
    <div class="body">
        <div class="form-group">
            <label for="email" class="col-md-12 control-label">Отобрать заявки для:</label>

            <div class="ml-md-3 col-md-3">
                <select onchange="window.location.href = this.value" id="select1" class="select2" autocomplete="off">
                    <option value="/admin/index/issues" {{#iff usertype '==' '' }}selected{{/iff}}>
                        Все
                    </option>
                    {{# each sellers }}
                        <option value="/admin/index/issues?user={{ id }}" {{#iff id '==' ../current_user }}selected{{/iff}}>
                            Продавец1
                        </option>
                    {{/each}}
                </select>
            </div>
        </div>
    </div>

    <button class="btn btn-primary" data-show-slide-menu><i class="fa fa-cog"></i></button>
</div>

<div class="full-container">
    <div class="ibox-title">
        <h2>Заявки</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/admin/">Рабочий стол</a></li>
            <li class="breadcrumb-item  active"><strong>Заявки</strong></li>
        </ol>
    </div>

    <div class="issues-block">
        <div class="table-issues-block">
            <div class="top">
                <div>
                    <div class="tb" data-block-top="1" onclick="$.isbl.showColumn(1, 'auto')">
                        <i class="fa fa-plus" aria-hidden="true"></i>
                        Нет в наличии
                        <span></span>
                    </div>
                    <div class="tb" data-block-top="2" onclick="$.isbl.showColumn(0, 'auto')">
                        <i class="fa fa-plus" aria-hidden="true"></i>
                        Новая заявка
                        <span></span>
                    </div>
                    <div class="tb" data-block-top="3" onclick="$.isbl.showColumn(2, 'auto')">
                        <i class="fa fa-plus" aria-hidden="true"></i>
                        В наличии
                        <span></span>
                    </div>
                    <div class="tb" data-block-top="4" onclick="$.isbl.showColumn(3, 'auto')">
                        <i class="fa fa-plus" aria-hidden="true"></i>
                        В отправке
                        <span></span>
                    </div>
                    <div class="tb" data-block-top="5" onclick="$.isbl.showColumn(4, 'auto')">
                        <i class="fa fa-plus" aria-hidden="true"></i>
                        Заказ отправлен
                        <span></span>
                    </div>
                    <div class="tb" data-block-top="6" onclick="$.isbl.showColumn(5, 'auto')">
                        <i class="fa fa-plus" aria-hidden="true"></i>
                        Доставлено/Архив
                        <span></span>
                    </div>
                </div>
            </div>
            <div class="body">
                <div class="tb">
                    <div>
                        <div class="issues-block-1 issues-block-1-1 ui-sortable" data-block="1"></div>
                    </div>
                </div>
                <div class="tb">
                    <div>
                        <div class="issues-block-1 issues-block-1-2" data-block="0"></div>
                    </div>
                </div>
                <div class="tb">
                    <div>
                        <div class="issues-block-1 issues-block-1-3" data-block="2"></div>
                    </div>
                </div>
                <div class="tb">
                    <div>
                        <div class="issues-block-1 issues-block-1-4" data-block="3"></div>
                    </div>
                </div>
                <div class="tb">
                    <div>
                        <div class="issues-block-1 issues-block-1-5" data-block="4"></div>
                    </div>
                </div>
                <div class="tb">
                    <div>
                        <div class="issues-block-1 issues-block-1-6" data-block="5"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{{#contentFor "footer"}}
    <script src="/js/admin/plugins/issuesBlock.js"></script>
    <script src="/js/admin/plugins/jqueru-ui/jquery-ui.min.js"></script>

    <script type="application/javascript">
        $.isbl.initialize();
    </script>
{{/contentFor}}