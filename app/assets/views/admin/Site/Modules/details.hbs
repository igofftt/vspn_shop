{{!< ../../admin/layout}}
{{#contentFor "head"}}
    <link href="/admin/css/plugins/codemirror/codemirror.css" rel="stylesheet">
    <link href="/admin/css/plugins/codemirror/dracula.css" rel="stylesheet">
{{/contentFor}}

<div class="con">
    <div class="row wrapper border-bottom white-bg page-heading">
        <div class="col-lg-12">
            <h2>{{ module.name_module }}</h2>
            <ol class="breadcrumb">
                <li>
                    <a href="/admin/">Рабочий стол</a>
                </li>
                <li>
                    <a href="/admin/index/{{ table }}">Главный список</a>
                </li>
                <li class="active">
                    <strong>{{# if id}}Редактирование{{ else }}Добавление{{/if}}</strong>
                </li>
            </ol>

            <div class="ibox-tools">
                {{# if modules.x }}
                    <a href="/admin/update/{{ table }}" class="btn btn-primary">Добавить</a>
                {{/if}}
            </div>
        </div>

        <div class="ibox-content">
            <form method="post" class="form-modules form-horizontal form-label-left">
                <div class="" role="tabpanel" data-example-id="togglable-tabs">
                    <ul id="myTab" class="nav nav-tabs bar_tabs" role="tablist">
                        <li role="presentation" class="active">
                            <a
                                    href="#url-00-tab"
                                    id="00-tab"
                                    role="tab"
                                    data-toggle="tab"
                                    aria-expanded="true"
                            >
                                Основные
                            </a>
                        </li>

                        {{# if langShow }}
                            {{#each lang as |val key| }}
                                <li role="presentation" class="">
                                    <a
                                            href="#url-{{ key }}-tab"
                                            id="{{ key }}-tab"
                                            role="tab"
                                            data-toggle="tab"
                                            aria-expanded="false"
                                    >
                                        {{ val.name }}
                                    </a>
                                </li>
                            {{/each}}
                        {{/if}}
                    </ul>

                    <div id="myTabContent" class="tab-content">
                        <div role="tabpanel" class="tab-pane fade active in" id="url-00-tab" aria-labelledby="00-tab">
                            <div class="wrapper wrapper-content animated fadeIn">
                                {{#each plugins as |v| }}
                                    {{{ v.html_top }}}
                                    {{{ v.html }}}
                                    {{{ v.html_bottom }}}

                                    {{# iff v.plugins.name '==' 'slider' }}
                                        {{#contentFor "footer"}}
                                            <script>
                                                $.ajax({
                                                    type: "post",
                                                    url: "/admin/file_manager/show_loader",
                                                    data: {
                                                        name_table : '{{ ../../../table }}_slider',
                                                        id_album   : '{{ ../../../id }}'
                                                    },
                                                    cache: false,
                                                    dataType: "html",
                                                    success: function (data) {
                                                        $('#slider').html(data);
                                                    }
                                                })
                                            </script>
                                        {{/contentFor}}
                                    {{/iff}}

                                    {{# iff v.plugins.name '==' 'nearby' }}
                                        {{#contentFor "footer"}}
                                            <script>
                                                $.ajax({
                                                    type: "post",
                                                    url: "/admin/file_manager/show_loader",
                                                    data: {
                                                        name_table : '{{ ../../../table }}',
                                                        id_album   : '{{ ../../../id }}',
                                                        lang       : '{{{tostring ../../../lang }}}',
                                                    },
                                                    cache: false,
                                                    dataType: "html",
                                                    success: function (data) {
                                                        $('#nearby').html(data);
                                                    }
                                                })
                                            </script>
                                        {{/contentFor}}
                                    {{/iff}}
                                    {{# iff v.plugins.name '==' 'location' }}
                                        {{#contentFor "footer"}}
                                            <script>
                                                $.ajax({
                                                    type: "post",
                                                    url: "/admin/modules/show_loader",
                                                    data: {
                                                        name_table : '{{ ../../../table }}',
                                                        id_album   : '{{ ../../../id }}',
                                                        view       : 'location'
                                                    },
                                                    cache: false,
                                                    dataType: "html",
                                                    success: function (data) {
                                                        $('#location').html(data);
                                                    }
                                                })
                                            </script>
                                        {{/contentFor}}
                                    {{/iff}}
                                    {{# iff v.plugins.name '==' 'expert_opinion' }}
                                        {{#contentFor "footer"}}
                                            <script>
                                                $.ajax({
                                                    type: "post",
                                                    url: "/admin/modules/show_loader_expert",
                                                    data: {
                                                        name_table : '{{ ../../../table }}',
                                                        id_album   : '{{ ../../../id }}',
                                                        view       : 'expertOpinion'
                                                    },
                                                    cache: false,
                                                    dataType: "html",
                                                    success: function (data) {
                                                        $('#expert_opinion').html(data);
                                                    }
                                                })
                                            </script>
                                        {{/contentFor}}
                                    {{/iff}}
                                    {{# iff v.plugins.name '==' 'calendar_tasks' }}
                                        {{#contentFor "footer"}}
                                            <script>
                                                $.ajax({
                                                    type: "post",
                                                    url: "/admin/modules/show_loader_calendar_tasks",
                                                    data: {
                                                        name_table : '{{ ../../../table }}',
                                                        id_album   : '{{ ../../../id }}'
                                                    },
                                                    cache: false,
                                                    dataType: "html",
                                                    success: function (data) {
                                                        $('#calendar_tasks').html(data);
                                                    }
                                                })
                                            </script>
                                        {{/contentFor}}
                                    {{/iff}}
                                {{/each}}
                            </div>
                        </div>

                        {{# if langShow }}
                            {{#each lang as |val key| }}
                                <div
                                        role="tabpanel"
                                        class="tab-pane fade"
                                        id="url-{{ key }}-tab"
                                        aria-labelledby="{{ key }}-tab"
                                >
                                    <div class="wrapper wrapper-content animated fadeIn">
                                        {{#each ../pluginsLang as |v k| }}
                                            {{{ v.html_top }}}

                                            {{# iff v.plugins.name '==' 'location_text' }}
                                                {{{replace v.html '--options--' val.name }}}
                                            {{ else }}
                                                {{{replace v.html '--options--' val.name '[]' }}}
                                            {{/iff}}

                                            {{{ v.html_bottom }}}

                                            {{# iff v.plugins.name '==' 'location_text' }}
                                                {{#contentFor "footer"}}
                                                    <script>
                                                        $.ajax({
                                                            type: "post",
                                                            url: "/admin/modules/show_loader",
                                                            data: {
                                                                name_table : '{{ ../../../table }}',
                                                                id_album   : '{{ ../../../id }}',
                                                                view       : 'locationText',
                                                                lang       : '{{ val.name }}'
                                                            },
                                                            cache: false,
                                                            dataType: "html",
                                                            success: function (data) {
                                                                $('#location_text{{ val.name }}').html(data);
                                                            }
                                                        })
                                                    </script>
                                                {{/contentFor}}
                                            {{/iff}}
                                        {{/each}}
                                    </div>
                                </div>
                            {{/each}}
                        {{/if}}
                    </div>
                </div>

                <div class="text-right" style="margin-bottom: 15px">
                    <div class="loader"></div>
                    <button class="btn btn-success" type="submit">Сохранить</button>
                    <button class="btn btn-primary" formaction="/admin/update/{{ table }}/{{{df id 0}}}/1" type="submit">Применить</button>
                    <button class="btn btn-default" formaction="/admin/index/{{ table }}" type="submit">Отменить</button>
                </div>
            </form>
        </div>
    </div>
</div>

{{#contentFor "footer"}}
