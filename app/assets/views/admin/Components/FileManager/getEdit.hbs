<div class="modal-body">
    <div class="panel-body">
        <input type="hidden" name="_token" value="yNlTQCa2dF9xcWW1sz6gbDkuE4K40yKl1tJdfCKg">
        <form name="">
            {{# if lang }}
                <!-- Nav tabs -->
                <ul class="nav nav-tabs" role="tablist">
                    {{#each lang as |val key| }}
                        <li role="presentation" class="{{# iff key '==' 0 }}active{{/iff }}">
                            <a
                                    href="#url-{{ key }}-tab-{{ ../name_table }}"
                                    aria-controls="url-{{ key }}-tab-{{ ../name_table }}"
                                    role="tab"
                                    data-toggle="tab"
                            >
                                {{ val.name }}
                            </a>
                        </li>
                    {{/each}}
                </ul>

                <div class="tab-content">
                    {{#each lang as |val key| }}
                        <div
                                role="tabpanel"
                                class="tab-pane fade {{# iff key '==' 0 }} active in {{/iff }}"
                                id="url-{{ key }}-tab-{{ ../name_table }}"
                        >
                            <div class="wrapper wrapper-content animated fadeIn">
                                <div class="form-group">
                                    <label for="email" class="col-md-12 control-label">Название</label>

                                    <div class="col-md-12">
                                        <input
                                                type="text"
                                                class="form-control"
                                                name="{{ ../name_table }}name_img_edit[{{ val.name }}]"
                                                value="{{ ../file.name }}"
                                        />
                                    </div>

                                    <br class="clear" />
                                </div>

                                <div class="form-group">
                                    <label for="password" class="col-md-12 control-label">описание</label>

                                    <div class="col-md-12">
                                            <textarea
                                                    class="form-control"
                                                    name="{{ ../name_table }}text_img_edit[{{ val.name }}]"
                                            >{{ ../file.text }}</textarea>
                                    </div>

                                    <br class="clear" />
                                </div>

                                <div class="form-group">
                                    <label for="password" class="col-md-12 control-label">Порядок сортировки</label>

                                    <div class="col-md-12">
                                        <input
                                                type="number"
                                                class="form-control"
                                                name="{{ ../name_table }}sort_img_edit[{{ val.name }}]"
                                                value="{{ ../file.sort }}"
                                        />
                                    </div>

                                    <br class="clear" />
                                </div>
                            </div>
                        </div>
                    {{/each}}
                </div>
            {{ else }}
                <div class="form-group">
                    <label for="email" class="col-md-12 control-label">Название</label>

                    <div class="col-md-12">
                        <input type="text" class="form-control" name="{{ name_table }}name_img_edit" value="{{ file.name }}" />
                    </div>

                    <br class="clear" />
                </div>

                <div class="form-group">
                    <label for="password" class="col-md-12 control-label">описание</label>

                    <div class="col-md-12">
                        <textarea class="form-control" name="{{ name_table }}text_img_edit">{{ file.text }}</textarea>
                    </div>

                    <br class="clear" />
                </div>

                <div class="form-group">
                    <label for="password" class="col-md-12 control-label">Порядок сортировки</label>

                    <div class="col-md-12">
                        <input type="number" class="form-control" name="{{ name_table }}sort_img_edit" value="{{ file.sort }}" />
                    </div>

                    <br class="clear" />
                </div>
            {{/if}}
        </form>
    </div>
</div>

<div class="modal-footer">
    <button type="button" class="btn btn-primary" onclick="sendEditImg{{ name_table }}({{ file.id }})">Сохранить</button>
</div>